# PitchTrainer Environment Configuration
# Copy this file to .env and fill in your values

# Mistral AI API Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# Application Configuration  
NODE_ENV=production
PORT=3000
DATABASE_PATH=/data/pitrain.db

# Security Configuration
ALLOWED_ORIGINS=https://pitrain.waffelwurst.de

# Model Configuration
MISTRAL_TRANSCRIPTION_MODEL=voxtral-mini-latest
MISTRAL_EVALUATION_MODEL=mistral-small-latest

# API Endpoints
MISTRAL_BASE_URL=https://api.mistral.ai/v1

# Performance Settings
MAX_AUDIO_DURATION=900  # 15 minutes in seconds
MAX_FILE_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30000   # 30 seconds

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info